<Window x:Class="DDTV_FFmpeg.FFmpegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        AllowsTransparency="True"
        Background="Transparent"
        Title="DDTV" Width="1024" Height="576" MouseWheel="ChangeVolume" KeyDown="Window_KeyDown" MouseDown="Window_MouseDown">
    <ffme:MediaElement Name="player" ClosedCaptionsChannel="CCP" Background="Gray" LoadedBehavior="Play" UnloadedBehavior="Stop"/>
</Window>
